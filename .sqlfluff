[sqlfluff]
# Use BigQuery SQL dialect
dialect = bigquery

# Use dbt templater so SQLFluff understands {{ ref() }}, {{ config() }}, etc.
templater = dbt

# Max line length
max_line_length = 120

# Exclude rules that are too strict for this project
exclude_rules = LT05

[sqlfluff:templater:dbt]
# Point to dbt project
project_dir = transform/hockey_dbt
profiles_dir = transform/hockey_dbt

[sqlfluff:indentation]
# 4-space indentation
indent_unit = space
tab_space_size = 4

[sqlfluff:rules:capitalisation.keywords]
# Keywords uppercase (SELECT, FROM, WHERE)
capitalisation_policy = upper

[sqlfluff:rules:capitalisation.functions]
# Functions uppercase (COUNT, SUM, COALESCE)
extended_capitalisation_policy = upper
